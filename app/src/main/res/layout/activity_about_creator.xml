<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/stephen_thajeb"
        app:civ_border_color="#FF000000"
        app:civ_border_width="2dp"

        />

    <TextView
        android:id="@+id/creator_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/profile_image"
        android:gravity="center"
        android:text="@string/creator_name"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/creator_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/creator_name"
        android:layout_marginVertical="10dp"
        android:text="@string/creator_email"
        android:textSize="22sp"
        android:gravity="center" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/creator_email"
        android:gravity="center"
        android:text="Junior Software Developer"
        android:textSize="22sp" />

</RelativeLayout>